{
  "compilerOptions": {
    "target": "es2022",
    "module": "Node16", // or "NodeNext", "esnext", "es2022"
    "moduleResolution": "Node16", // <--- Make sure this is also Node16 or NodeNext
    "isolatedModules": true,     // <--- Crucial. You confirmed this is there.
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "./src", // Ensure this is correct
    "outDir": "./dist"  // Ensure this is correct
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts" // <--- Make sure your test files are included
  ],
  "exclude": ["node_modules", "dist"]
}